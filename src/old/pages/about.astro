---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';
import worldMap from '~/assets/images/Vector-Shape-World-Map-Offices.png';

const metadata = {
  title: 'About — Altitude Consulting',
  description: 'Learn about Liam O\'Brien and Altitude Consulting\'s 25+ years of experience in financial services and AI strategy consulting.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Altitude Consulting"
    image={{
      src: '~/assets/images/Liam-OBrien-scaled.jpg',
      alt: 'Liam O\'Brien - Founder of Altitude Consulting',
    }}
  >
    <Fragment slot="title">
      <span class="leading-[1.2]">
        AI Strategy Consulting for <br />
        <span class="text-gradient-professional">Financial Services Leaders</span>
      </span>
    </Fragment>

    <Fragment slot="subtitle">
      With over 25 years of experience scaling regulated financial businesses and implementing technology, automation & AI solutions since 2013, we bring an operator's perspective to every engagement. We understand the challenges you face because we've lived them.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Reach"
    stats={[
      { title: 'Years Experience', amount: '25+' },
      { title: 'Financial Institutions', amount: '20+' },
      { title: 'Global Markets', amount: '7' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Why Choose Altitude Consulting?"
    subtitle="We combine deep financial services expertise with cutting-edge AI knowledge to deliver board-ready strategies that actually work."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Strategic-Technical-Operational Hybrid',
        description:
          'Over 25 years of experience in financial services and regulatory environments, combined with applied AI expertise since 2013 across compliance, automation, and training use cases.',
        icon: 'tabler:brain',
        classes: {
          icon: 'text-teal-600 dark:text-teal-400',
        },
      },
      {
        title: 'Former COO & Responsible Manager',
        description:
          'Deep experience building and scaling firms from startup to 100+ staff, with strong delivery across all operational layers: front, middle, and back office.',
        icon: 'tabler:building',
        classes: {
          icon: 'text-blue-600 dark:text-blue-400',
        },
      },
      {
        title: 'Regulatory Fluency',
        description:
          'Expertise across multiple markets: ASIC, SEC, MAS, CySEC, ISO 31000 frameworks. We understand the compliance landscape that financial firms operate within.',
        icon: 'tabler:shield-lock',
        classes: {
          icon: 'text-slate-700 dark:text-slate-300',
        },
      },
    ]}
  >
    <Fragment slot="title">
      Why Choose <span class="text-gradient-professional">Altitude Consulting?</span>
    </Fragment>
  </Features3>

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Proprietary Voice-AI Discovery',
        description:
          'Unique delivery method using voice-AI tools for asynchronous interviews with 500–1000 staff in under a week, combined with senior executive interviews for comprehensive strategy development.',
        icon: 'tabler:microphone',
        classes: {
          icon: 'text-teal-700 dark:text-teal-300',
        },
      },
      {
        title: 'Trusted by Global Institutions',
        description:
          'Proven track record with eToro, Devere, MST, Gleneagle, FundSeeder, Davidson, Morgan Stanley, BAML, Saxo Bank, Deutsche Bank, UBS, JP Morgan, Credit Suisse, ABN Amro.',
        icon: 'tabler:users',
        classes: {
          icon: 'text-blue-700 dark:text-blue-300',
        },
      },
      {
        title: 'Board-Ready Deliverables',
        description:
          'Custom AI CoE blueprints including job roles, vendor recommendations, implementation roadmap, governance framework, and legal observability layer.',
        icon: 'tabler:presentation',
        classes: {
          icon: 'text-indigo-600 dark:text-indigo-400',
        },
      },
      {
        title: 'Operator\'s Mindset',
        description:
          'We don\'t just provide slides—we offer grounded, implementable strategies aligned with budgets and capacity. We understand what internal champions face because we\'ve been there.',
        icon: 'tabler:target',
        classes: {
          icon: 'text-slate-600 dark:text-slate-400',
        },
      },
      {
        title: 'Cross-Functional Alignment',
        description:
          'Skilled in aligning IT, compliance, operations, and business units around a unified AI strategy that satisfies both innovation goals and risk management requirements.',
        icon: 'tabler:network',
        classes: {
          icon: 'text-teal-600 dark:text-teal-400',
        },
      },
      {
        title: '90-Day Delivery',
        description:
          'From initial assessment to board presentation, we deliver your complete AI strategy in just 90 days—faster than traditional consulting approaches.',
        icon: 'tabler:clock',
        classes: {
          icon: 'text-blue-600 dark:text-blue-400',
        },
      },
    ]}
    image={{
      src: '~/assets/images/concept-1868728.jpg',
      alt: 'AI Strategy Consulting',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Philosophy"
    subtitle="AI isn't just an IT project—it's a business transformation. Without a plan, it causes more confusion than clarity."
    items={[
      {
        title: 'Strategic Coherence',
        description:
          'Our role is to create strategic coherence across legal, compliance, operations, and technology—so the right AI initiatives get built, adopted, and scaled.',
      },
      {
        title: 'Risk-Aware Innovation',
        description:
          'We help firms innovate without compromising governance or wasting resources. Every recommendation considers regulatory requirements and operational realities.',
      },
      {
        title: 'Measurable Outcomes',
        description:
          'We deliver actionable strategies with clear KPIs, implementation roadmaps, and success metrics that align with your business objectives and board expectations.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Approach"
    subtitle="We combine executive interviews, proprietary voice-AI discovery tools, and deep financial services expertise to deliver strategies that work."
    isReversed={true}
    callToAction={{
      text: 'Book Strategy Session',
      href: '/contact',
    }}
    items={[
      {
        title: 'Executive Discovery',
        description: 'In-depth interviews with C-suite and department heads to understand strategic priorities, pain points, and organizational dynamics.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Voice-AI Staff Analysis',
        description: 'Proprietary voice-AI tools conduct rapid organizational analysis, identifying opportunities and resistance points across 500+ staff in under a week.',
        icon: 'tabler:microphone',
      },
      {
        title: 'Strategic Blueprint',
        description: 'Comprehensive AI Center of Excellence strategy including governance frameworks, vendor recommendations, hiring plans, and implementation roadmap.',
        icon: 'tabler:route',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Global Presence"
    tagline="Where We Operate"
    columns={3}
    items={[
      {
        title: 'Asia Pacific',
        description: 'Serving Australia, New Zealand, Singapore, Hong Kong, and surrounding regions',
      },
      {
        title: 'North America',
        description: 'Serving the United States and Canada with comprehensive market coverage',
      },
      {
        title: 'Europe',
        description: 'Serving the UK, Cyprus, Germany, and surrounding regions',
      },
    ]}
  >
    <Image src={worldMap} alt="World Map Offices" class="mx-auto my-8 max-w-xl w-full" width={600} height={300} />
  </Features2>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get Started"
    tagline="Ready to Transform Your AI Strategy?"
    columns={1}
    classes={{
      container: 'max-w-2xl mx-auto',
    }}
    items={[
      {
        title: 'Schedule Executive Consultation',
        description:
          'Book a confidential 30-minute executive briefing to discuss your AI strategy roadmap, governance requirements, and how we can accelerate your AI Center of Excellence implementation.',
        icon: 'tabler:presentation-analytics',
      },
    ]}
  />
</Layout>
